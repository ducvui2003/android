<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.fragment.SignInFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Đăng Nhập"
        android:textColor="@color/green"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textAlignment="center"/>


    <EditText
        android:id="@+id/edit_sign_in_email"
        style="@style/LoginTextField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_user"
        android:drawableTint="@color/green"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/warning_sign_in_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/edit_sign_in_pass"
        style="@style/LoginTextField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_key"
        android:drawableTint="@color/green"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/warning_sign_in_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Đăng Nhập"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/text_view_change_fragment_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đăng ký ngay"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/text_view_change_fragment_forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quên mật khẩu?"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="18dp"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>