<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/container_comment_management"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:alignItems="center"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_comment_manager_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ID"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_comment_manager_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Tên truyện"
            android:textSize="16dp"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_comment_manager_chapter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Chapter"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/tv_comment_manager_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Trạng thái"
            android:textSize="16dp" />

      <androidx.cardview.widget.CardView
          android:layout_marginLeft="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <Button
              android:id="@+id/btn_comment_manager_action"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center"
              android:text="Ẩn"
              android:textSize="10dp" />
      </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>